{
  "extends": [
    "config:base",
    "group:allNonMajor",
    "schedule:earlyMondays"
  ],
  "prCreation": "not-pending",
  "packageRules": [{
      "matchDepTypes": ["devDependencies"],
      "matchPackagePatterns": ["eslint"],
      "groupName": "eslint",
      "automerge": true
    },
    {
      "matchPackagePatterns": ["axios"],
      "groupName": "axios"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchPackagePatterns": ["prettier"],
      "groupName": "prettier",
      "automerge": true
    }
  ]
}
